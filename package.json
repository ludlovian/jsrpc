{
  "name": "jsrpc",
  "version": "1.0.4",
  "description": "Basic RPC over http",
  "main": "client/index.js",
  "module": "client/index.mjs",
  "scripts": {
    "clean": "rm -rf client server node_modules/.cache .nyc_output coverage",
    "format": "prettier-standard {src,test}/*.js",
    "lint": "standard {src,test}/*.js | snazzy",
    "coverage": "npm run test && nyc report --reporter=html && cd coverage && python3 -m http.server 8000",
    "test": "nyc ava",
    "build": "rollup -c rollup.config.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "stoppable": "^1.1.0"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "esm": "^3.2.25",
    "httpie": "^1.1.2",
    "nyc": "^14.1.1",
    "prettier-standard": "^15.0.1",
    "rollup": "^1.25.1",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-terser": "^5.1.2",
    "snazzy": "^8.0.0",
    "standard": "^14.3.1"
  },
  "ava": {
    "require": [
      "esm"
    ]
  }
}
