    "httpie": "^1.1.2",
    "nyc": "^14.1.1",
    "prettier-standard": "^15.0.1",
    "rollup": "^1.25.1",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-terser": "^5.1.2",
    "sirv-cli": "^0.4.5",
    "snazzy": "^8.0.0",
    "standard": "^14.3.1"
  },
  "ava": {
    "require": [
      "esm"
    ]
