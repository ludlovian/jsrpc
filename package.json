{
  "name": "jsrpc",
  "version": "1.2.0",
  "description": "Basic RPC over http",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "scripts": {
    "clean": "rm -rf dist node_modules/.cache .nyc_output coverage",
    "format": "prettier-standard {src,test}/*.js",
