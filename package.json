{
  "name": "jsrpc",
  "version": "1.0.0",
  "description": "Basic RPC over http",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf {dist,node_modules/.cache,.nyc_output,coverage}/",
    "format": "prettier-standard {src,test}/*.js",
    "lint": "standard {src,test}/*.js | snazzy",
    "coverage": "npm run test && nyc report --reporter=html && http-server coverage/ -p 8000",
    "test": "nyc ava",
    "build": "rollup -c rollup.config.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ava": "^1.4.1",
    "esm": "^3.2.22",
    "httpie": "^1.1.1",
    "mri": "^1.1.4",
    "stoppable": "^1.1.0"
  },
  "devDependencies": {
    "http-server": "^0.11.1",
    "nyc": "^14.0.0",
    "prettier-standard": "^9.1.1",
    "rollup": "^1.10.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-terser": "^4.0.4",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  },
  "ava": {
    "require": [
      "esm"
    ]
  }
}
